      <div class="alert alert-<%= type %>" role="alert">
        <div class="alert-message" align="center">
          <strong>
            <%= message %>
          </strong>
        </div>

      </div>
      <% } %>
  </div>

  <div class="container-fluid" style="padding-top: 20px;">
    <% if (locals.type, locals.message) { %>
      <div class="alert alert-<%= type %>" role="alert">
        <div class="alert-message" align="center">
          <strong>
            <%= message %>
          </strong>
        </div>

      </div>
      <% } %>
  </div>
  <div class="d-flex justify-content-center">
    <div class="d-flex  " style="padding-top:200px">
      <form action="/submitCheckout" method="post">
        <div class="form-group">
          <div align="left">
            <label for="exampleInputEmail1">Name</label>
          </div>

          <input name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            value="<%=userData.name%>">

        </div>






        <div class="form-group">
          <div align="left">
            <label for="exampleInputEmail1">Email</label>
          </div>

          <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            value="<%=userData.email%>">

        </div>

        <div class=" form-group">
          <div align="left">
            <label for="exampleInputEmail1">Phone</label>
          </div>

          <input name="phone" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            value="<%=userData.phone%>">

        </div>



        <div class=" dropdown" style="padding-left:19px;padding-top: 10px;">
          <a class="btn btn-secondary dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Payment Method
          </a>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#" onclick="myFunction('amex')">AMEX </a>
            <a class="dropdown-item" href="#" onclick="myFunction('maestro')">MAESTRO</a>
            <a class="dropdown-item" href="#" onclick="myFunction('master')">MASTER</a>
            <a class="dropdown-item" href="#" onclick="myFunction('visa')">VISA</a>
          </div>
        </div>

        <script> myFunction = button => {
            let container = document.getElementById('container-payment');

            if (button === 'amex') {
              container.innerHTML = "<input type='hidden' name='payment' payment class='form-control' placeholder='Enter phone' value='amex'>"
            } else if (button === 'maestro') {
              container.innerHTML = "<input type='hidden' name='payment' payment class='form-control' placeholder='Enter phone' value='maestro'>"
            } else if (button === 'master') {
              container.innerHTML = "<input type='hidden' name='payment' payment class='form-control' placeholder='Enter phone' value='master'>"
            } else if (button === 'visa') {
              container.innerHTML = "<input type='hidden' name='payment' payment class='form-control' placeholder='Enter phone' value='visa'>"
            }

          }
        </script>




        <div class="form-group" id="container-payment">




        </div>

        <blockquote class="blockquote text-center" style="padding-top:5px;">
          <p class="mb-0">Price: <%=price %>$
          </p>

        </blockquote>

        <div align="center">
          <button type="submit" class="btn btn-primary">Confirm</button>
        </div>



      </form>


    </div>

  </div>




