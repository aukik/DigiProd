<body align="center">



  <nav class="navbar" style="
    background-color: #101f37;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
 ">

    <a class="navbar-brand" href="/adminAddProduct">
      <img src="https://cdn.discordapp.com/attachments/884628154864525332/956249108564299776/unknown.png"
        class="img-fluid" style="
    width: 120px;
    height: 50px;
    object-fit: cover;
    padding-left:20px;

    ">
    </a>

    <ul class="nav justify-content-end" style="padding-right: 10px;">



      <li>
        <a class="navbar-brand" style="color: #ffffff;padding-right:10px;">
          <p>
            Admin
          </p>
        </a>
      </li>
      <li class="nav-item" style="padding-right: 30px;">
        <a class="nav-link active" aria-current="page" href="/adminLogOut">
          <p class="text-white">Log Out</p>
        </a>
      </li>



    </ul>
  </nav>
  <main>
    <div class="container-fluid" style="padding-top: 20px;">
      <% if (locals.type, locals.message) { %>
        <div class="alert alert-<%= type %>" role="alert">
          <div class="alert-message" align="center">
            <strong>
              <%= message %>
            </strong>
          </div>

        </div>
        <% } %>
    </div>


    <div class="container-fluid" style="width: 320px; ">

      <br>


      <figure class="card card-product">
        <div class="img-wrap"><img class="img-responsive" style="width: 100%;height: 400px;" src=<%=data.image %>>
        </div>
        <figcaption class="info-wrap" style="padding-left: 30px">
          <h4 class="title">
            <%= data.name %>
          </h4>
          <p class="desc">
            <%= data.tag %>
          </p>
          <div class="rating-wrap">

          </div> <!-- rating-wrap.// -->
        </figcaption>
        <div class="container-fluid" style="padding-bottom:20px">
          <form action="/update" method="post">


          </form>

          <div class=" container-fluid">
            <div class="price-wrap h5">
              <span class="price-new">
                <%= data.price %>$
              </span>
            </div>
          </div>
          <!-- price-wrap.// -->
        </div> <!-- bottom-wrap.// -->
      </figure>
    </div> <!-- col // -->

    <div class=" container-fluid " align="center" style="padding-bottom: 10px;">
      <form action="/delete" method="post"><button class="btn btn-danger">Delete</button></form>
    </div>
    </div>
    <div class="d-flex justify-content-center" style="
    height: 330px;
    background: rgb(135, 206, 235);

    padding-top: 50px;
    ">
      <form action="/updateDetails" method="post">
        <div class="form-row">
          <div class="form-group col-md-4">

            <input name="name" class="form-control" placeholder="Name">
          </div>
          <!-- <div class="form-group col-md-3">

            <input name="quantity" class="form-control" placeholder="Quantity">
          </div> -->
          <div class="form-group col-md-4">

            <input name="price" class="form-control" placeholder="Price">
          </div>
          <div class="form-group col-md-4">

            <input name="category" class="form-control" placeholder="Category">
          </div>
        </div>
        <div class="form">

          <input name="tag" class="form-control" placeholder="Description">
        </div>

        <div class="form">

          <input name="image" class="form-control" placeholder="Image Link">
        </div>

        <button class="btn btn-primary">Update</button>




      </form>





  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>


</body>

</html>
